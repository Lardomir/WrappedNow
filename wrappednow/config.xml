<?xml version='1.0' encoding='utf-8'?>
<widget id="ch.example.wrappednow" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WrappedNow</name>
    <description>Spotify Wrapped but whenever and wherever you want it</description>
    <author email="leon.heid@icloud.com, blanka.polgar@stud.bfstg.ch, giulia.fallati@stud.bfstg.ch" href="https://github.com/Lardomir, https://github.com/Blankaaaa, https://github.com/giuliafallati">
        Leon Heid, Blanka Polgar, Giulia Fallati
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-customurlscheme">
        <variable name="URL_SCHEME" value="ch.example.wrappednow" />
        <variable name="ANDROID_SCHEME" value="ch.example.wrappednow" />
        <variable name="ANDROID_HOST" value="callback" />
        <variable name="ANDROID_PATHPREFIX" value="/" />
    </plugin>
    <plugin name="cordova-plugin-geolocation" />
    <plugin name="cordova-plugin-device" />
    <plugin name="cordova-plugin-device-motion" />
    <access origin="https://accounts.spotify.com" />
    <access origin="https://api.spotify.com" />
    <access origin="https://*.tile.openstreetmap.org" />
    <platform name="android">
        <icon density="ldpi" src="res/icon.png" />
        <icon density="mdpi" src="res/icon.png" />
        <icon density="hdpi" src="res/icon.png" />
        <icon density="xhdpi" src="res/icon.png" />
        <icon density="xxhdpi" src="res/icon.png" />
        <icon density="xxxhdpi" src="res/icon.png" />
        <preference name="android-minSdkVersion" value="23" />
        <preference name="android-targetSdkVersion" value="35" />
        <preference name="android-compileSdkVersion" value="35" />
        <preference name="AndroidTheme" value="@android:style/Theme.DeviceDefault.NoActionBar" />
        <hook src="scripts/apply_android_fixes.js" type="after_platform_add" />
    </platform>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
</widget>
